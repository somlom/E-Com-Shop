    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            margin: 0;
            display: flex;
            flex-direction: column;
            height: 100%;
        }

        .header {
            width: 100%;
            display: flex;
            background-color: rgb(106, 153, 223);
            color: white;
        }

        .header *,
        .footer *,
        .content * {
            margin: 10px;
        }

        .content {
            text-align: left;
            display: flex;
            flex: 1;
            margin: 10px;
            justify-content: center;
            align-self: center;
            flex-direction: column;
        }

        .footer {
            padding: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: rgb(106, 153, 223);
            color: white;
            border: none;
            border-radius: 15px 15px 0 0;
        }
    </style>
</head>

